<% if flash[:alert] %>
  <%=flash[:alert]%>
<%end%>

<h5 class="card-header info-color white-text text-center py-4">
  <strong style='color:white'>LOG IN</strong>
</h5>

<div class="container" style='margin-bottom:5%;'>
  <div class="row">
      <div class="col-md-12">
        <div class="well well-sm">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <label for="email">Email</label>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :class =>'form-control', id: 'email' %>
            </div>

            <div class="form-group">
              <label for="password">Passowrd</label>
              <%= f.password_field :password, autocomplete: "current-password", :class =>'form-control', id:'password' %>
            </div>

            <div class="actions">
              <%= f.submit 'Log in', :class => 'navbar-brand button' %>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>



