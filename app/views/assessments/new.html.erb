<div class="container home-container">
  <div class="row row-content justify-content-center align-items-center">
    <div class="col-auto">
      A paragraph will be prepared
    </div>
  </div>

  <div class="questions-container">
    <% @options_hash.keys.each do |key| %>
      <div class="custom-question">
        <div class="row assessment-btn-row">
          <div class="col-12 col-sm-3">
            <div class="question-text">
              <span><%= key %></span>
            </div>
          </div>

          <div class="col-12 col-sm-6">
            <div class="question-options">
              <%= select_tag key, options_for_select(@options_hash[key]), class: 'form-control' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-12 col-sm-3"></div>

    <div class="col-12 col-sm">
      <div class="home-container">
        <div class="row">
          <form class="form cf">
            <% @options_hash.keys.each_with_index do |key, key_index| %>
              <section class="plan cf">
                <h2><%= key %>:</h2>
                <% @options_hash[key].each_with_index do |option, option_index| %>
                  <input type="radio" name="<%= key %>" id="option_<%= key_index %>_<%= option_index %>" value="<%= option.to_sym %>">

                  <label class="four tab" for="option_<%= key_index %>_<%= option_index %>">
                    <%= option %>
                  </label>
                <% end %>
              </section>
            <% end %>
            <div class="submit-section">
              <%= button_tag 'Generate Report', class: 'btn btn-lg btn-success' %>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
